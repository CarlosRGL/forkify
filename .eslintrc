{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": true,
        "requireReturnDescription": true
      }
    ],
    "no-unused-vars": 2,
    "no-undef": 2
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  }
}
